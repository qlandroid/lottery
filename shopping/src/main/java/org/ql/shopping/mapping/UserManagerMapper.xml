<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.ql.shopping.dao.IUserManagerDao">
	<resultMap id="BaseResultMap" type="org.ql.shopping.pojo.UserManager">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="account" property="account" jdbcType="VARCHAR" />
		<result column="pw" property="pw" jdbcType="VARCHAR" />
		<result column="power" property="power" jdbcType="VARCHAR" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="phone" property="phone" jdbcType="VARCHAR" />
		<result column="address" property="address" jdbcType="VARCHAR" />
	</resultMap>

	<insert id="inserte" parameterType="org.ql.shopping.pojo.UserManager">
		insert into user_manager
		(account,pw,power,name,phone,address)
		values(
		#{account,jdbcType=VARCHAR}
		,#{pw,jdbcType=VARCHAR}
		,#{power,jdbcType=VARCHAR}
		,#{name,jdbcType=VARCHAR}
		,#{phone,jdbcType=VARCHAR}
		,#{address,jdbcType=VARCHAR}
		);
	</insert>

	<select id="findUser" resultMap="BaseResultMap"
		parameterType="org.ql.shopping.pojo.UserManager">
		SELECT *
		FROM user_manager
		<include refid="where"></include>
	</select>

	<select id="findAll" resultMap="BaseResultMap"
		parameterType="org.ql.shopping.pojo.UserManager">
		SELECT *
		FROM user_manager limit #{firstIndex},#{pageSize}
	</select>

	<update id="updateUser" parameterType="org.ql.shopping.pojo.UserManager">
		UPDATE FROME user_manager
		<set>
			<trim prefixOverrides=",">
				<if test="account != null and account != ''">
					, account = #{account,jdbcType=VARCHAR}
				</if>
				<if test="pw != null and pw != ''">
					, pw = #{pw,jdbcType=VARCHAR}
				</if>
				<if test="name != null and name != ''">
					, name = #{name,jdbcType=VARCHAR}
				</if>
				<if test="phone != null and phone != ''">
					, phone = #{phone,jdbcType=VARCHAR}
				</if>
				<if test="address != null and address != ''">
					, address = #{address,jdbcType=VARCHAR}
				</if>
			</trim>
		</set>
		
		where id = #{id ,jdbcType=INTEGER}
	</update>

	<select id="queryTotalCount" resultType="long">
		SELECT count(*) FROM
		user_manager ;
	</select>


	<delete id="deleteUser" parameterType="org.ql.shopping.pojo.UserManager">
		DELETE FROM user_manager
		<include refid="where"></include>
	</delete>
	
	<delete id="deleteAll">
		DELETE FROM user_login
	</delete>

	<sql id="where">
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="id != null and id != ''">
				AND id = #{id,jdbcType=INTEGER}
			</if>
			<if test="account != null and account != ''">
				AND account = #{account,jdbcType=VARCHAR}
			</if>
			<if test="pw != null and pw != ''">
				AND pw = #{pw,jdbcType=VARCHAR}
			</if>
			<if test="name != null and name != ''">
				AND name = #{name,jdbcType=VARCHAR}
			</if>
			<if test="phone != null and phone != ''">
				AND phone = #{phone,jdbcType=VARCHAR}
			</if>
			<if test="address != null and address != ''">
				AND address = #{address,jdbcType=VARCHAR}
			</if>
		</trim>
	</sql>

</mapper>